#!/usr/bin/env python3
# vim: set ts=8 sts=4 et sw=4 tw=99:
#
# Simple script to run over a list of names and output any
# that are listed as being both M and F.
#

import sys
import os

try:
    import oplcsv
    import usernames
except ImportError:
    sys.path.append(os.path.join(os.path.dirname(
        os.path.dirname(os.path.realpath(__file__))), "scripts"))
    import oplcsv
    import usernames


# Hashtable for sex lookup.
# str -> [int, int] (left for male, right for female).
NameToSexHash = {}

###############################################

errorCount = 0
warningCount = 0


def redden(s):
    if os.name != 'nt':
        return "\033[1;31m" + s + "\033[0;m"
    return s


def enyellow(s):
    if os.name != 'nt':
        return "\033[1;33m" + s + "\033[0;m"
    return s


def perror(s):
    global errorCount
    errorCount += 1
    print(' ' + redden(s), file=sys.stderr)


def pwarning(s):
    global warningCount
    warningCount += 1
    print(' ' + enyellow(s), file=sys.stderr)

###############################################


def process_file(path, exemptions):
    global NameToSexHash
    global AlreadyPrintedList

    csv = oplcsv.Csv(path)

    if 'Name' not in csv.fieldnames:
        perror("Missing Name column in %s" % path)
        return

    if 'Sex' not in csv.fieldnames:
        perror("Missing Sex column in %s" % path)
        return

    nameidx = csv.index('Name')
    sexidx = csv.index('Sex')

    for row in csv.rows:
        name = row[nameidx]
        sex = row[sexidx]

        if name == '':
            if 'JapaneseName' in csv.fieldnames:
                if row[csv.index('JapaneseName')] == '':
                    pwarning("Missing name information in %s." % path)
                name = row[csv.index('JapaneseName')]
            else:
                pwarning("Missing name information in %s." % path)
            continue

        if name in exemptions:
            continue

        if sex == '':
            pwarning("Missing sex information for \"%s\" in %s." %
                     (name, path))
            continue

        # If only the first initial is given, then it could be a false
        # positive.
        first = name.split()[0]
        if len(first) == 1 or (len(first) == 2 and first[-1] == '.'):
            continue

        # If only a last name is given, we probably have false positives
        if name.count(' ') == 0:
            continue

        if name not in NameToSexHash:
            NameToSexHash[name] = [0, 0]

        if sex == 'M':
            NameToSexHash[name][0] = NameToSexHash[name][0] + 1
        else:
            NameToSexHash[name][1] = NameToSexHash[name][1] + 1


def load_exemptions(exemptions_path):

    csv = oplcsv.Csv(exemptions_path)

    if 'Name' not in csv.fieldnames:
        perror("Missing Name column in %s" % exemptions_path)
        return

    nameidx = csv.index('Name')
    exemptions = set()

    for row in csv.rows:
        name = row[nameidx]

        if name == '':
            perror("Missing name in %s, row: %s" % exemptions_path, str(row))

        exemptions.add(name)

    return exemptions


def main():

    exemptions = load_exemptions(os.path.join('lifter-data', 'sex-exemptions.csv'))

    for dirname, subdirs, files in os.walk(os.getcwd()):
        if "meet-data" in subdirs:
            subdirs[:] = ['meet-data']
        if 'entries.csv' in files:
            entriespath = dirname + os.sep + 'entries.csv'
            process_file(entriespath, exemptions)

    for name, counts in NameToSexHash.items():
        if counts[0] and counts[1]:
            pwarning("Sex conflict for %s: %uM, %uF." %
                     (name, counts[0], counts[1]))
            username = usernames.get_username(name)
            print(" https://www.openpowerlifting.org/u/%s" % username)

    if errorCount > 0 or warningCount > 0:
        print("Summary: %u errors, %u warnings." % (errorCount, warningCount))

    if errorCount > 0:
        return 1
    return 0


if __name__ == '__main__':
    sys.exit(main())
